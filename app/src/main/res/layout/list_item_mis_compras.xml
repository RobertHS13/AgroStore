<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#DCEDC8 "
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivMisCompras"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_margin="15dp"
        android:layout_gravity="center|start"
        android:src="@drawable/ermitanio"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido:"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvMisComprasNumeroPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="#00002323"
            android:textColor="#454957"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de lote:"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvMisComprasNumeroLote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#FF454957"
            android:text="#00002323"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvMisComprasEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#FF454957"
            android:text="Maestro Karim"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvMisComprasFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#FF454957"
            android:text="Maestro Karim"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>