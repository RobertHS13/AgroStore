<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewItemBuscar"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ermitanio"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemBuscarTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semillas del ermitaÃ±o"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textViewItemBuscarPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$50"
            android:textSize="20sp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <RatingBar
            android:id="@+id/rbItemBuscarEstrellas"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.5"/>

        <TextView
            android:id="@+id/textViewItemBuscarLocalidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="373K - Tamaulipas"
            android:textSize="17sp"/>
        
    </LinearLayout>

</LinearLayout>